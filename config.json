{
  "token_hmac_secret_key": "${CENTRIFUGO_TOKEN_HMAC_SECRET_KEY}",
  "api_key": "${CENTRIFUGO_API_KEY}",
  "admin": true,
  "admin_password": "${CENTRIFUGO_ADMIN_PASSWORD}",
  "admin_secret": "${CENTRIFUGO_ADMIN_SECRET}",
  "health": true,
  "proxy_subscribe_endpoint": "https://ropacal-backend-production.up.railway.app/api/centrifugo/subscribe",
  "proxy_subscribe_timeout": "5s",
  "namespaces": [
    {
      "name": "driver",
      "presence": true,
      "force_recovery": true,
      "force_recovery_mode": "cache",
      "history_size": 1,
      "history_ttl": "60s",
      "allow_subscribe_for_client": false,
      "proxy_subscribe": true
    },
    {
      "name": "shift",
      "presence": false,
      "force_recovery": true,
      "history_size": 5,
      "history_ttl": "120s",
      "allow_subscribe_for_client": false,
      "proxy_subscribe": true
    },
    {
      "name": "manager",
      "presence": false,
      "force_recovery": true,
      "history_size": 10,
      "history_ttl": "300s",
      "allow_subscribe_for_client": false,
      "proxy_subscribe": true
    }
  ]
}
